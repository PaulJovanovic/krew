        </div>
        <div class="col-xs-4 phxxs mts">
          <%= image_tag user.profile_picture_large, class: "img-responsive bras" %>
        </div>
      <% end %>
    </div>
    <table class="mtxl mha">
      <tr>
        <td class="phxs fss fwxl c-red">
          <%= @group.location.city %>
        </td>
        <td class="phxxxs fss c-dark-red">
          <%= @group.start_date.strftime("%m/%d/%y") %>
        </td>
        <td class="phxxxs fss c-dark-red">
          &mdash;
