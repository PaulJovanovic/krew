    <div class="fss c-red text-center"><%= @group.tagline %></div>
    <div class="row nmhxxs mtm">
      <% @group.users.each do |user| %>
        <div class="col-xs-4 phxxs mts">
          <%= image_tag user.profile_picture_large, class: "img-responsive bras" %>
        </div>
        <div class="col-xs-4 phxxs mts">
          <%= image_tag user.profile_picture_large, class: "img-responsive bras" %>
